<Window x:Class="OS_Prog4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1200">
    
    <TabControl>
        <TabItem Header="Process Scheduler">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="40" Margin="0,0,0,25">
                    <Button Content="Add a Process" Margin="10,0,10,0"/>
                    <Button Content="Generate Processes" Margin="10,0,10,0"/>
                    <Button Content="Clear Processes" Margin="10,0,10,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Label FontSize="25" HorizontalAlignment="Center">Processes</Label>
                    <DataGrid Height="700" ItemsSource="{Binding Processes}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Process Name" Binding="{Binding PId}"/>
                            <DataGridTextColumn Header="Arrival Time" Binding="{Binding StartTime}"/>
                            <DataGridTextColumn Header="Priority" Binding="{Binding Priority}"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </TabItem>
        
        <TabItem Header="Memory Management">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Label Content="Page Table"/>
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Page"/>
                            <DataGridTextColumn Header="Frame"/>
                            <DataGridCheckBoxColumn Header="Valid"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Label Content="TLB"/>
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Page"/>
                            <DataGridTextColumn Header="Frame"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="0">
                    <Label Content="Physical Memory"/>
                    <DataGrid>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Frame"/>
                            <DataGridTextColumn Header="00"/>
                            <DataGridTextColumn Header="01"/>
                            <DataGridTextColumn Header="02"/>
                            <DataGridTextColumn Header="03"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal">
                    <Label Content="Get Value: 0x"/>
                    <TextBox Width="30"/>
                    <TextBox Width="30"/>
                    <Label Content="Virtual Address 0x"/>
                    <Button Content="Go"/>
                    <Label Content="Value = "/>
                    <Label/>
                </StackPanel>
            </Grid>
            
        </TabItem>
        
        <TabItem Header="Page Replacement"></TabItem>
    </TabControl>
    
</Window>
